{{!-- Prototype Donations page --}}
<section class="flex space-x-5 justify-center">
    <div class="donation-container border border-slate-950 w-1/4 p-1">
        <div class="basis-1/4">
            <h2 class="font-semibold text-center">Donation Form</h2>
        <hr></div>
        <form class="p-4">
        {{!-- <label for="fname">First name:</label> --}}
        <input type="text" class="border rounded border-slate-950 pb-1 pr-3 mb-1" id="Fname" name="Fname" placeholder="First Name">
        <br>
        <input type="text" class="border rounded border-slate-950 pb-1 pr-3 mb-1" id="Lname" name="Lname" placeholder="Last Name">
        <br>
        <input type="text" class="border rounded border-slate-950 pb-10 pr-3 mb-1" id="item" name="item" placeholder="Item">
        <br>
        <input type="date" class="border rounded border-slate-950 pb-1 pr-3 mb-1" id="date" name="date" placeholder="Date">
        <br>
        <button class="btn submit-btn border rounded border-slate-950">Submit Item</button>
        {{!-- <input type="submit" value="Submit"> --}}
        </form>
        </div>

    <div class="last-donation-container border rounded border-slate-950 w-1/3 p1">
        <div class="'basis-1/4">
                <h2 class="font-semibold text-center">Recent Donations</h2>
                <hr>
                <div class="donation p-4">
                    {{#each donations as |donations|}}
                    <p>
                    <b>{{donations.date}}</b>
                    {{donations.donation}}
                    </p>
                    {{/each}}
                </div>
                <div>
                    <p></p>
                </div>
        </div>
    </div>
</section>

<script src="./js/donation.js"></script>
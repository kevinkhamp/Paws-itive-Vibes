<section class="p-5">
    <h1 class="Pet_Images flex flex-wrap justify-center text-3xl p-5">
        Meet Our Furry Friends!
        <section class="container">
            {{!-- For ALL cards --}}
            <div class="flex flex-wrap justify-center items-center gap-2 pb-5">
                {{!-- {{#if loggedIn}} --}}

                {{#each petGallery as |Pet|}}

                {{!-- Card --}}
                <section
                    class="Pet_Cards w-60 p-2 border-box bg-white rounded-lg shadow-lg transform transition-all hover:-translate-y-2 duration-300 hover:shadow-2x1">

                    {{!-- image --}}
                    <img class="Pet pictures rounded-lg items-center object-scale-down"
                        src="/images/pets/{{Pet.pet_name}}.jpg" alt="Pet pictures">
                    <div class="p-2"> </div>

                    {{!-- arrow --}}
                    <div>
                        <input id="{{Pet.pet_name}}" type="checkbox"
                            class="peer absolute top-0 inset-x-0 w-full h-12 z-10 cursor-pointer opacity-0" />

                        {{!-- header --}}
                        <label for="{{Pet.pet_name}}">
                            <h2
                                class="font-bold m-2 text-center transition-transform duration-500 peer-checked:animate-bounce">
                                {{Pet.pet_name}}
                            </h2>
                        </label>
                        {{!-- description --}}
                        <p
                            class="text-xl m-2 overflow-hidden transition-all duration-500 max-h-0 peer-checked:max-h-40 ">
                            {{bio}}
                        </p>

                    </div>
                </section>
                {{/each}}
            </div>

        </section>
        {{!-- {{else}} --}}
        {{!-- <a href="/login">You must login first to view this page!</a> --}}
        {{!-- {{/if}} --}}